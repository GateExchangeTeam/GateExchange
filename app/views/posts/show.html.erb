<%= stylesheet_link_tag "posts", "data-turbo-track": "reload" %>
<div class="container-fluid" id="posts-show-container">
  <div class="card">
    <div class="card-header">
      <div class="container-fluid">
        <div class="comment-header">
            <span class="comment-pfp">
                    <img
                      src="https://avatars.dicebear.com/api/bottts/<%= @post.id %>.svg"
                      class="rounded-circle comment-pic"
                      height="30"
                      alt="Robot"
                      loading="lazy"
                      />
            </span>
          <span class="comment-uname">
            <a href="">Username</a>
          </span>
        </div>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <%= @post.title %>
      </h5>
      <h6 class="card-subtitle mb-2 text-muted">Asked in <a href=<%= course_posts_path(@post.course.id) %> class="card-link"><%= @post.course.title %></a></h6>
      <%= render 'content' %>
      <a href="<%= new_course_post_comment_path(@course_id, @post_id) %>" class="card-link">Reply</a>
    </div>
    <div class="card-footer comment-bg">
      <% if @comments.count > 0%>
        <ul class="list-group list-group-flush">
          <%= render @comments %>
        </ul>
      <% else%>
        <p>
          <em class="text-success">
            Be the first one to answer this question
          </em>
        </p>
      <% end%>
    </div>
  </div>
  <br>
  <%= link_to("Back to course", course_posts_path(@course_id), :class => "btn btn-primary")%>
</div>
<%= javascript_include_tag 'posts', :cache => true %>