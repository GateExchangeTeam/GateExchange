<div class="container-fluid">
  <div class="row bg-dark text-light">
    <div class="col-md-12">
      <div class="text-center">
        <h1> Posts for <%= @course.title %> </h1>
      </div>
    </div>
  </div>

  <br>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary me-md-2" type="button" href="<%= new_course_post_path(@id) %>" >

      <i class="bi bi-pencil-square">
        Ask a question
      </i>

    </a>
  </div>
  <br>
  <div class="container">
    <% @posts.each do |p| %>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= p.title %></h5>
              <p class="card-text"><%= p.description %></p>
              <a href="<%= course_post_path(@id, p.id) %>" class="btn btn-primary">View details</a>
              <button class="btn btn-secondary"><%= p.view %> views </button>

            </div>
          </div>
        </div>
      </div>

      <br>

    <% end %>
  </div>
</div>