<div class="container-fluid bg-dark text-dark">
  <div class="row">
    <div class="col-md-12" style="padding-top: 2rem">
      <div class="text-center text-light">
        <h1> Posts for <%= @course.title %> </h1>
      </div>
    </div>
  </div>
  <br>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="padding-right: 3.5em">
    <a class="btn btn-primary me-md-2" type="button" href="<%= new_course_post_path(@id) %>" >

      <i class="bi bi-pencil-square">
        Ask a question
      </i>

    </a>
  </div>
  <br>
  <div class="container">
    <% if @posts.count > 0 %>
      <% @posts.each do |p| %>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= p.title %></h5>
                <p class="card-text"><%= p.description %></p>
                <a href="<%= course_post_path(@id, p.id) %>" class="btn btn-success">View details</a>
                <button class="btn btn-warning disabled"><%= p.view %> views &nbsp; <i class="fa fa-eye"></i> </button>
                <button class="btn btn-primary disabled"><%= p.comments.count %> comments &nbsp; <i class="fa-solid fa-message"></i> </button>
              </div>
            </div>
          </div>
        </div>

        <br>

      <% end %>
    <% else %>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center text-danger">
                <em>
                  No posts yet. Be the first one to post for this course
                </em>
              </h5>
            </div>
          </div>
        </div>
      </div>
    <%end %>

  </div>
</div>