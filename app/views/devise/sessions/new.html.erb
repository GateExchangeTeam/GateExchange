<div class="text-center">
  <br>
  <br>
  <br>
  <br>
  <h1 class = "text-danger">Welcome to GateExchange</h1>
  <h4>Questions and Answers for a Smarter Colgate</h4>
  <br>
  <br>

  <div class = "form-group">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => "form-label" %><br />
        <div> <%= f.email_field :email, autofocus: true, autocomplete: "email" %> </div> 
      </div>

      <div class="field">
        <%= f.label :password, :class => "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
          <br>
          <%= f.submit "Log in", :class => "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  <br>

  <%= render "devise/shared/links" %>
</div>
